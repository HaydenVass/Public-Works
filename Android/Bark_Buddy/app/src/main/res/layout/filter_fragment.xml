<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="490dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/filter"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView_filterImg_open"
            android:layout_width="182dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_filter_list_black_24dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="@string/distance" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/textView_filter_distanceBarAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desired_energy_level" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <Spinner
        android:id="@+id/spinner_energylvl"
        android:layout_width="match_parent"
        android:entries="@array/energy_levels"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desired_weight_range" />

    <Spinner
        android:id="@+id/spinner_weight_range"
        android:layout_width="match_parent"
        android:entries="@array/weight_range"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel" />


</LinearLayout>