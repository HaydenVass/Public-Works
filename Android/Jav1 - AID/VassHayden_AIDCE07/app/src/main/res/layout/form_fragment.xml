<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        style="@style/labelText"
        android:id="@+id/textView_firstname"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        style="@style/userText"
        android:id="@+id/textview_userFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView_firstname"
        app:layout_constraintStart_toStartOf="@+id/textView_firstname"
        app:layout_constraintTop_toBottomOf="@+id/textView_firstname" />

    <TextView
        style="@style/labelText"
        android:id="@+id/textView_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        app:layout_constraintEnd_toEndOf="@+id/textview_userFirstName"
        app:layout_constraintStart_toStartOf="@+id/textview_userFirstName"
        app:layout_constraintTop_toBottomOf="@+id/textview_userFirstName" />

    <EditText
        android:id="@+id/textview_userLastName"
        style="@style/userText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_lastname" />

    <TextView
        style="@style/labelText"
        android:id="@+id/TextView_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintEnd_toEndOf="@+id/textview_userLastName"
        app:layout_constraintStart_toStartOf="@+id/textview_userLastName"
        app:layout_constraintTop_toBottomOf="@+id/textview_userLastName" />

    <EditText
        android:id="@+id/editText_age"
        style="@style/userText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_age" />

</android.support.constraint.ConstraintLayout>