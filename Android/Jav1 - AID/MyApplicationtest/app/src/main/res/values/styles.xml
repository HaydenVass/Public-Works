<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="registrationFormBase">

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="registerButton" parent = "ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/LightSteelBlue</item>
    </style>

    <style name="cancelButton" parent = "ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/IndianRed</item>
    </style>

</resources>
