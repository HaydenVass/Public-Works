<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="405dp"
        android:layout_height="724dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/my_Name1"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@string/hayden_vass"
                android:textColor="@color/gray"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:id="@+id/BIRTHDAY1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/birthtdayText"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/my_birthday1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/march_12"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp">

            <TextView
                android:id="@+id/HOMETOWN1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hometown"
                android:textColor="@color/gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/my_hometown1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sanford_florida"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/HOMETOWN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/HOBBIES1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hobbies"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_hobbies1"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:text="@string/my_hobbies"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/BIO1"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="@string/bio"
                android:textColor="@color/gray"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/my_bio1"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:text="@string/my_bio"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="412dp"
        android:layout_height="738dp">

        <TextView
            android:id="@+id/BIO"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:text="@string/bio"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/my_hobbies"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/my_hobbies"
            app:layout_constraintTop_toBottomOf="@+id/my_hobbies" />

        <TextView
            android:id="@+id/my_bio"
            android:layout_width="382dp"
            android:layout_height="93dp"
            android:text="@string/my_bio"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/BIO"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/BIO"
            app:layout_constraintTop_toBottomOf="@+id/BIO" />

        <TextView
            android:id="@+id/my_hobbies"
            android:layout_width="382dp"
            android:layout_height="63dp"
            android:text="@string/my_hobbies"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/HOBBIES"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/HOBBIES"
            app:layout_constraintTop_toBottomOf="@+id/HOBBIES" />

        <TextView
            android:id="@+id/HOBBIES"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:text="@string/hobbies"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/my_hometown"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/my_hometown"
            app:layout_constraintTop_toBottomOf="@+id/my_hometown" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toStartOf="@+id/my_Name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/my_Name"
            android:layout_width="185dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/hayden_vass"
            android:textColor="@color/gray"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/BIRTHDAY"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text="@string/birthtdayText"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.692"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_Name" />

        <TextView
            android:id="@+id/my_birthday"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:text="@string/march_12"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/BIRTHDAY"
            app:layout_constraintStart_toStartOf="@+id/BIRTHDAY"
            app:layout_constraintTop_toBottomOf="@+id/BIRTHDAY" />

        <TextView
            android:id="@+id/HOMETOWN"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:text="@string/hometown"
            android:textColor="@color/gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/my_birthday"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/my_birthday"
            app:layout_constraintTop_toBottomOf="@+id/my_birthday" />

        <TextView
            android:id="@+id/my_hometown"
            android:layout_width="382dp"
            android:layout_height="31dp"
            android:text="@string/sanford_florida"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/HOMETOWN"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/HOMETOWN"
            app:layout_constraintTop_toBottomOf="@+id/HOMETOWN" />

        <Button
            android:id="@+id/button"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="76dp"
            android:text="@string/switch_to_linear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>