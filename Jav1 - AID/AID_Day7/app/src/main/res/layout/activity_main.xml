<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_sometext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Some Text"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_submitsometext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Send Text"
        app:layout_constraintEnd_toEndOf="@+id/editText_sometext"
        app:layout_constraintStart_toStartOf="@+id/editText_sometext"
        app:layout_constraintTop_toBottomOf="@+id/editText_sometext" />

    <Button
        android:id="@+id/buttonImplicitIntent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send Implicitly"
        app:layout_constraintEnd_toEndOf="@+id/button_submitsometext"
        app:layout_constraintStart_toStartOf="@+id/button_submitsometext"
        app:layout_constraintTop_toBottomOf="@+id/button_submitsometext" />
</android.support.constraint.ConstraintLayout>